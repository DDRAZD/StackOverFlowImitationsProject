@model StackOverflowProject.ViewModels.QuestionViewModel

@{ 
    ViewBag.Title = "Add Question";
}

<div class="row">
    <div class="col-sm-12">
        <h1> Create Question</h1>
        <form class="needs-validation" novalidate="novalidate" action="/question/create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtQuestionName">QUestion</label>
                    <textarea class="form-control" id="textQuestionName" placeholder="Enter Question" name="QuestionName" required="required" patten="^[a-zA-Z ]*$" autofocus="autofocus"></textarea>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Looks bad</div>

                </div>
            </div>


            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="drpCategory">Category</label>
                    <select class="form-control" id="drpCategory" name="CategoryID" required="required">
                        <option value="">please select</option>
                        @foreach (var item in ViewBag.Categories)
                        {
                            <option value="@item.CategoryID">@item.CategoryName</option>
                        }

                    </select>
                    <div class="valid-feedback">Looks good</div>
                    <div class="invalid-feedback">Looks bad</div>

                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit question</button>
        </form>
    </div>
</div>

<script>

    

    $(document).on("submit", ".needs-validation", validate);
    $(".needs-validation input").blur(validate);
    function validate(event) {
        if ($(".needs-validation")[0].checkValidity() == false) {

            event.preventDefault();
        }
        $(".needs-validation")[0].classList.add("was-validated");
    }


    
</script>